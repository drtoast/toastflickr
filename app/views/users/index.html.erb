<h1>Listing users</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Token</th>
    <th>Username</th>
    <th>Realname</th>
    <th>Url</th>
    <th>Flickr user</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.token %></td>
    <td><%= user.username %></td>
    <td><%= user.realname %></td>
    <td><%= user.url %></td>
    <td><%= user.flickr_user_id %></td>
    <td><%= user.created_at %></td>
    <td><%= user.updated_at %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

